modules = ["nodejs-20"]

[[ports]]
localPort = 3000
externalPort = 3002

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 3000

[[ports]]
localPort = 8083
externalPort = 3001

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Build and Serve"
author = 41271515
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "Dev Server"
author = 41271515
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run serve -- --host 0.0.0.0"
